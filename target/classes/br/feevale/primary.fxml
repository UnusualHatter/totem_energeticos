    <padding>
        <Insets bottom="30" left="30" right="30" top="30" />
    </padding>
   <ListView fx:id="listaProdutos" onMouseClicked="#adicionaCarrinho" prefHeight="300.0" prefWidth="335.0" />

    <GridPane fx:id="gridProdutos" hgap="20" vgap="20" />

    <Button onAction="#switchToSecondary" style="-fx-font-size:20px; -fx-background-color:#2ecc71; -fx-text-fill:white; -fx-padding:15px 30px;" text="Ir para Carrinho" />
